import urllib, os, sys

try:
    filename=sys.argv[1]
except:
    sys.exit("usage: "+sys.argv[0]+" [filename|\"-\"]"+"\n\nDefault pastebin: http://ubuntu.pastebin.com")
try:
    website=sys.argv[2]
except:
    website="http://ubuntu.pastebin.com"

if filename == "-":
    content=sys.stdin.read()
else:
    try:
        f=open(filename)
        content=f.read()
        f.close()        
    except:
        sys.exit("Unable to open : "+filename)

user=os.environ.get('USER')

params={}

#Common fro pastebin.com and paste.ubuntu-nl.org
params['poster']=user

#For pastebin.com
params['parent_pid']="" 
params['format']="text"
params['code2']=content
params['paste']="Send"
params['remember']="1"
params['expiry']="f"

#For paste.ubuntu-nl.org
params['content']=content

params=urllib.urlencode(params)

page=urllib.urlopen(website+'/',params)
print page.url
